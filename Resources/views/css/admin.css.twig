        padding: 0;
        width: 100%;
    }

    #header {
        height: 50px;
        margin-bottom: 2em;
        overflow: hidden;
        position: static;
        width: 100%;
    }

    #header-logo a {
    }
    #header-logo a img {
        max-height: 40px;
    }

    #header-nav {
        position: static;
    }
    #header-menu {
        background: transparent;
        box-shadow: none;
        line-height: 50px;
        margin: 0;
        padding: 0 15px;
        position: static;
        overflow: hidden;
    }

    #header-logo a.medium {
        font-size: 21px;
    }
    #header-logo a.short {
        font-size: 24px;
    }

    #header-menu li {
        background: transparent;
        float: left;
        display: inline-block;
        line-height: 40px;
    }
    #header-menu li a {
        border: 0;
