{% if field_options.is_localized %}
    {% set formatted_value = value|localizeddate(field_options.intl_date_format, field_options.intl_time_format, app.request.locale, null, field_options.format) %}
{% else %}
    {% set formatted_value = value|date(field_options.format) %}
{% endif %}

<time datetime="{{ value|date('c') }}" title="{{ value|date('r') }}">{{ formatted_value }}</time>
