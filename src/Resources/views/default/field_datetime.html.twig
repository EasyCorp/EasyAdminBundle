{% if is_localized %}
    {% set formatted_value = value|localizeddate(intl_date_format, intl_time_format, app.request.locale, null, intl_format) %}
{% else %}
    {% set formatted_value = value|date(field_options.format) %}
{% endif %}

<time datetime="{{ value|date('c') }}" title="{{ value|date('r') }}">{{ formatted_value }}</time>
