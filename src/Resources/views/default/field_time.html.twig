{% if field_options.is_localized %}
    {% set formatted_value = value|localizeddate('none', field_options.intl_time_format, app.request.locale, null, field_options.format) %}
{% else %}
    {% set formatted_value = value|date(field_options.format) %}
{% endif %}

<time>{{ value|date(field_options.format) }}</time>
